{
    "name": "@xola/icons",
    "version": "1.2.0",
    "description": "Xola's icon set",
    "repository": {
        "type": "git",
        "url": "git://github.com/xola/ui-kit.git"
    },
    "files": [
        "build/**"
    ],
    "main": "build/icons.js",
    "module": "build/icons.mjs",
    "exports": {
        ".": {
            "require": {
                "default": "./build/icons.js"
            },
            "import": {
                "default": "./build/icons.mjs"
            }
        }
    },
    "scripts": {
        "build": "vite build",
        "format": "prettier --write -l src",
        "lint": "xola-lint src",
        "lint:fix": "xola-lint --fix src"
    },
    "dependencies": {
        "autoprefixer": "^10.4.20",
        "clsx": "^1.1.1",
        "postcss": "^8.4.49",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "react": "18.2",
        "react-dom": "18.2",
        "rollup-plugin-copy": "^3.5.0",
        "tailwind-merge": "^2.5.5",
        "tailwindcss": "3.4"
    },
    "engines": {
        "node": ">=18"
    },
    "prettier": {
        "semi": true,
        "printWidth": 120,
        "trailingComma": "all",
        "singleQuote": false,
        "bracketSpacing": true,
        "useTabs": false,
        "arrowParens": "always",
        "bracketSameLine": false,
        "tabWidth": 4
    },
    "devDependencies": {
        "vite": "5.4"
    }
}
